<UserControl x:Class="CourseWork_Prog_Lang_Compiler.Views.SyntaxAnalyzerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:CourseWork_Prog_Lang_Compiler.Views"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="900">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Основной контент -->
        <Grid Grid.Row="1" Margin="0,5,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1.5*"/>
            </Grid.ColumnDefinitions>

            <!-- Левая колонка: Лексемы -->
            <GroupBox Header="Лексемы" Grid.Column="0" Margin="0,0,5,0">
                <TextBox Text="{Binding InputTokensText, UpdateSourceTrigger=PropertyChanged}"
                         TextWrapping="Wrap" 
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Visible"
                         HorizontalScrollBarVisibility="Disabled"
                         IsReadOnly="True"
                         FontFamily="Consolas"
                         FontSize="12"/>
            </GroupBox>

            <!-- Правая колонка: Результат и Ошибки -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Результат анализа -->
                <GroupBox Header="Результат синтаксического анализа" Grid.Row="0" Margin="0,0,0,5">
                    <TextBox Text="{Binding SyntaxAnalysisResultText}"
                             TextWrapping="Wrap"
                             IsReadOnly="True"
                             VerticalScrollBarVisibility="Visible"
                             FontFamily="Consolas"
                             FontSize="14"/>
                </GroupBox>

                <!-- Синтаксические ошибки -->
                <GroupBox Header="Список синтаксических ошибок" Grid.Row="1" Margin="0,0,0,5">
                    <DataGrid ItemsSource="{Binding SyntaxErrors}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              CanUserAddRows="False"
                              ScrollViewer.HorizontalScrollBarVisibility="Visible"
                              ScrollViewer.VerticalScrollBarVisibility="Visible">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="№" Binding="{Binding Id}" Width="Auto"/>
                            <DataGridTextColumn Header="Описание" Binding="{Binding Description}" Width="Auto"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </GroupBox>

                <!-- Семантические ошибки -->
                <GroupBox Header="Список семантических ошибок" Grid.Row="2">
                    <DataGrid ItemsSource="{Binding SemanticErrors}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              CanUserAddRows="False"
                              ScrollViewer.HorizontalScrollBarVisibility="Visible"
                              ScrollViewer.VerticalScrollBarVisibility="Visible">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="№" Binding="{Binding Id}" Width="Auto"/>
                            <DataGridTextColumn Header="Описание" Binding="{Binding Description}" Width="Auto"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </GroupBox>
            </Grid>
        </Grid>

        <!-- Строка состояния -->
        <StatusBar Grid.Row="2" Margin="0,5,0,0">
            <StatusBarItem>
                <TextBlock Text="{Binding SyntaxStatusText}"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</UserControl>